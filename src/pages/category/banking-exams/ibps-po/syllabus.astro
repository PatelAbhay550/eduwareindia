<Layout 
  title="IBPS PO Syllabus 2024 - Detailed Prelims & Mains Syllabus | Eduware"
  description="Complete IBPS PO 2024 syllabus for Prelims and Mains exam. Get detailed topic-wise syllabus, exam pattern, marking scheme and preparation tips."
  keywords={['IBPS PO syllabus', 'Banking exam syllabus', 'IBPS PO exam pattern', 'PO syllabus 2024']}
>
  <div class="container">
    <!-- Header -->
    <section class="syllabus-header">
      <h1>IBPS PO 2024 Syllabus</h1>
      <p>Complete syllabus and exam pattern for IBPS PO Preliminary and Main Examinations</p>
      <div class="exam-info">
        <div class="info-item">
          <span class="label">Exam Mode</span>
          <span class="value">Online</span>
        </div>
        <div class="info-item">
          <span class="label">Exam Type</span>
          <span class="value">Objective + Descriptive</span>
        </div>
        <div class="info-item">
          <span class="label">Negative Marking</span>
          <span class="value">Yes (0.25)</span>
        </div>
      </div>
    </section>

    <!-- Navigation -->
    <nav class="syllabus-nav">
      <a href="#preliminary" class="nav-link">Preliminary Exam</a>
      <a href="#mains" class="nav-link">Main Exam</a>
      <a href="#preparation" class="nav-link">Preparation Tips</a>
      <a href="../ibps-po" class="nav-link">Back to Overview</a>
    </nav>

    <!-- Preliminary Exam Syllabus -->
    <section id="preliminary" class="exam-section">
      <h2>IBPS PO Preliminary Exam Syllabus</h2>
      
      <div class="exam-overview">
        <div class="overview-item">
          <strong>Total Duration:</strong> {syllabusData.preliminary.totalDuration}
        </div>
        <div class="overview-item">
          <strong>Total Questions:</strong> {syllabusData.preliminary.totalQuestions}
        </div>
        <div class="overview-item">
          <strong>Total Marks:</strong> {syllabusData.preliminary.totalMarks}
        </div>
        <div class="overview-item">
          <strong>Negative Marking:</strong> {syllabusData.preliminary.negativeMarking}
        </div>
      </div>

      <div class="sections-grid">
        {syllabusData.preliminary.sections.map(section => (
          <div class="section-card">
            <div class="section-header">
              <h3>{section.name}</h3>
              <div class="section-stats">
                <span>{section.questions} Questions</span>
                <span>{section.marks} Marks</span>
                <span>{section.duration}</span>
              </div>
            </div>
            <div class="section-content">
              <h4>Topics Covered:</h4>
              <ul class="topics-list">
                {section.topics.map(topic => (
                  <li>{topic}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </section>

