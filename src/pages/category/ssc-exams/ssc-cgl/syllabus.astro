<Layout 
	title="SSC CGL Syllabus 2025 - Complete Tier 1, 2, 3 Syllabus | Eduware"
	description="Complete SSC CGL 2025 syllabus for Tier 1, Tier 2, and Tier 3 with detailed topics, study plan, and preparation tips. Download PDF syllabus."
	keywords={['SSC CGL syllabus 2025', 'SSC CGL Tier 1 syllabus', 'SSC CGL Tier 2 syllabus', 'SSC CGL preparation']}
>
	<div class="container">
		<!-- Header -->
		<header class="syllabus-header">
			<h1>SSC CGL Syllabus 2025</h1>
			<p>Complete syllabus for Tier 1, Tier 2, and Tier 3 examinations</p>
			<div class="header-actions">
				<a href="/category/ssc-exams/ssc-cgl" class="btn btn-secondary">‚Üê Back to SSC CGL</a>
				<button class="btn btn-primary" onclick="window.print()">üìÑ Download PDF</button>
			</div>
		</header>

		<!-- Navigation -->
		<div class="syllabus-nav">
			<button class="nav-btn active" data-tier="tier1">Tier 1 Syllabus</button>
			<button class="nav-btn" data-tier="tier2">Tier 2 Syllabus</button>
			<button class="nav-btn" data-tier="tier3">Tier 3 Syllabus</button>
			<button class="nav-btn" data-tier="study-plan">Study Plan</button>
		</div>

		<!-- Tier 1 Syllabus -->
		<div id="tier1" class="tier-content active">
			<div class="tier-header">
				<h2>SSC CGL Tier 1 Syllabus</h2>
				<div class="tier-info">
					<div class="info-item">
						<span class="label">Total Questions:</span>
						<span class="value">100</span>
					</div>
					<div class="info-item">
						<span class="label">Total Marks:</span>
						<span class="value">200</span>
					</div>
					<div class="info-item">
						<span class="label">Duration:</span>
						<span class="value">60 minutes</span>
					</div>
					<div class="info-item">
						<span class="label">Negative Marking:</span>
						<span class="value">0.50 marks</span>
					</div>
				</div>
			</div>

			<div class="subjects-container">
				{syllabusData.tier1.subjects.map((subject, index) => (
					<div class="subject-card">
						<div class="subject-header">
							<h3>{subject.name}</h3>
							<div class="subject-stats">
								<span class="stat">Questions: {subject.questions}</span>
								<span class="stat">Marks: {subject.marks}</span>
							</div>
						</div>
						
						<div class="subject-content">
							<div class="topics-section">
								<h4>Important Topics</h4>
								<div class="topics-grid">
									{subject.topics.map((topic) => (
										<div class="topic-item">{topic}</div>
									))}
								</div>
							</div>
							
							<div class="tips-section">
								<h4>Preparation Tips</h4>
								<ul class="tips-list">
									{subject.tips.map((tip) => (
										<li>{tip}</li>
									))}
								</ul>
							</div>
						</div>
					</div>
				))}
			</div>
		</div>

		<!-- Tier 2 Syllabus -->
		<div id="tier2" class="tier-content">
			<div class="tier-header">
				<h2>SSC CGL Tier 2 Syllabus</h2>
				<div class="tier-description">
					<p>Tier 2 consists of four papers. Paper I and II are compulsory for all posts, while Paper III and IV are for specific posts only.</p>
				</div>
			</div>

			<div class="papers-container">
				{syllabusData.tier2.papers.map((paper, index) => (
					<div class="paper-card">
						<div class="paper-header">
							<h3>{paper.name}</h3>
							<div class="paper-info">
								<span class="info">Duration: {paper.duration}</span>
								<span class="info">Questions: {paper.questions}</span>
								<span class="info">Marks: {paper.marks}</span>
							</div>
						</div>
						
						<div class="paper-description">
							<p>{paper.description}</p>
						</div>
						
						<div class="paper-sections">
							<h4>Detailed Syllabus</h4>
							<div class="sections-grid">
								{paper.sections.map((section) => (
									<div class="section-item">{section}</div>
								))}
							</div>
						</div>
					</div>
				))}
			</div>
		</div>

		<!-- Tier 3 Syllabus -->
