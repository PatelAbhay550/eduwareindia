---
import Layout from '../layouts/Layout.astro';
import { CONTACT_EMAIL, GITHUB_URL } from '../consts';

// FAQ structured data
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What exams do you cover?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We cover all major competitive exams including SSC (CGL, CHSL, MTS), Banking (IBPS, SBI), Railway (RRB), UPSC, State PSCs, Police exams, and more."
      }
    },
    {
      "@type": "Question",
      "name": "Are the study materials free?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! All our study materials, mock tests, and practice questions are completely free. Our mission is to make quality exam preparation accessible to everyone."
      }
    },
    {
      "@type": "Question",
      "name": "How often is content updated?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We regularly update our content based on the latest exam patterns, syllabus changes, and current affairs. New questions and materials are added weekly."
      }
    },
    {
      "@type": "Question",
      "name": "Can I suggest topics or improvements?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Absolutely! We welcome suggestions and feedback. Email us with your ideas, and we'll work to implement valuable suggestions for the community."
      }
    }
  ]
};
---

<Layout 
	title="Contact Us - Eduware" 
	description="Get in touch with Eduware. We're here to help you with your competitive exam preparation journey."
	keywords={['contact', 'support', 'help', 'exam preparation', 'competitive exams']}
>
	<!-- FAQ Schema -->
	<script type="application/ld+json" is:inline set:html={JSON.stringify(faqSchema)}>
	</script>
	
	<div class="container">
		<header class="page-header">
			<h1>Contact Us</h1>
			<p>We're here to help you succeed in your competitive exam journey</p>
		</header>

		<div class="contact-content">
			<div class="contact-grid">
				<div class="contact-card">
					<div class="contact-icon">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
							<polyline points="22,6 12,13 2,6"></polyline>
						</svg>
					</div>
					<h3>Email Us</h3>
					<p>Have questions about our study materials or need support? Drop us an email and we'll get back to you within 24 hours.</p>
					<a href={`mailto:${CONTACT_EMAIL}`} class="contact-link">{CONTACT_EMAIL}</a>
				</div>

				<div class="contact-card">
					<div class="contact-icon">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M9 19c-5 0-9-4-9-9s4-9 9-9 9 4 9 9-4 9-9 9z"></path>
							<path d="M3.6 7h4.8m0 0V3h4m-4 4 4-4"></path>
						</svg>
					</div>
					<h3>GitHub</h3>
					<p>Check out our open-source projects and contribute to making exam preparation better for everyone.</p>
					<a href={GITHUB_URL} target="_blank" rel="noopener noreferrer" class="contact-link">GitHub Profile</a>
				</div>

				<div class="contact-card">
					<div class="contact-icon">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
							<circle cx="12" cy="10" r="3"></circle>
						</svg>
					</div>
					<h3>Location</h3>
					<p>Based in India, we understand the unique challenges of Indian competitive exams and provide localized support.</p>
					<span class="contact-text">India</span>
				</div>
			</div>

			<div class="faq-section">
				<h2>Frequently Asked Questions</h2>
				<div class="faq-grid">
					<div class="faq-item">
						<h3>What exams do you cover?</h3>
						<p>We cover all major competitive exams including SSC (CGL, CHSL, MTS), Banking (IBPS, SBI), Railway (RRB), UPSC, State PSCs, Police exams, and more.</p>
					</div>
					<div class="faq-item">
						<h3>Are the study materials free?</h3>
						<p>Yes! All our study materials, mock tests, and practice questions are completely free. Our mission is to make quality exam preparation accessible to everyone.</p>
					</div>
					<div class="faq-item">
						<h3>How often is content updated?</h3>
						<p>We regularly update our content based on the latest exam patterns, syllabus changes, and current affairs. New questions and materials are added weekly.</p>
					</div>
					<div class="faq-item">
						<h3>Can I suggest topics or improvements?</h3>
						<p>Absolutely! We welcome suggestions and feedback. Email us with your ideas, and we'll work to implement valuable suggestions for the community.</p>
					</div>
				</div>
			</div>

			<div class="support-section">
				<h2>Need Immediate Help?</h2>
				<p>For urgent queries or technical support, please email us directly. We typically respond within 24 hours during business days.</p>
				<div class="support-hours">
					<h4>Response Times:</h4>
					<ul>
						<li>Technical Issues: Within 24 hours</li>
						<li>Content Questions: Within 48 hours</li>
						<li>General Inquiries: Within 72 hours</li>
						<li>Collaboration Requests: Within 1 week</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</Layout>

<style>
	.page-header {
		text-align: center;
		margin-bottom: 3rem;
	}
	
	.page-header h1 {
		font-size: var(--font-size-4xl);
		margin-bottom: 1rem;
	}
	
	.page-header p {
		font-size: var(--font-size-lg);
		color: var(--text-secondary);
	}
	
	.contact-content {
		max-width: 900px;
		margin: 0 auto;
	}
	
	.contact-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		margin-bottom: 4rem;
	}
	
	.contact-card {
		background: var(--bg-primary);
		border: 1px solid var(--border-light);
		border-radius: var(--radius-lg);
		padding: 2rem;
		text-align: center;
		transition: all 0.2s ease;
		box-shadow: var(--shadow-sm);
	}
	
	.contact-card:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}
	
	.contact-icon {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 60px;
		height: 60px;
		background: var(--primary-light);
		color: var(--primary);
		border-radius: 50%;
		margin-bottom: 1rem;
	}
	
	.contact-card h3 {
		margin-bottom: 1rem;
		color: var(--text-primary);
	}
	
	.contact-card p {
		margin-bottom: 1.5rem;
		color: var(--text-secondary);
		line-height: 1.6;
	}
	
	.contact-link {
		color: var(--primary);
		text-decoration: none;
		font-weight: 600;
		transition: color 0.2s ease;
	}
	
	.contact-link:hover {
		color: var(--primary-dark);
		text-decoration: underline;
	}
	
	.contact-text {
		color: var(--text-secondary);
		font-weight: 500;
	}
	
	.faq-section {
		margin-bottom: 4rem;
	}
	
	.faq-section h2 {
		text-align: center;
		margin-bottom: 2rem;
		color: var(--text-primary);
	}
	
	.faq-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
		gap: 2rem;
	}
	
	.faq-item {
		background: var(--bg-secondary);
		padding: 1.5rem;
		border-radius: var(--radius);
		border-left: 4px solid var(--primary);
	}
	
	.faq-item h3 {
		margin-bottom: 0.5rem;
		color: var(--text-primary);
		font-size: var(--font-size-lg);
	}
	
	.faq-item p {
		color: var(--text-secondary);
		line-height: 1.6;
		margin: 0;
	}
	
	.support-section {
		background: var(--bg-secondary);
		padding: 2rem;
		border-radius: var(--radius-lg);
		text-align: center;
	}
	
	.support-section h2 {
		margin-bottom: 1rem;
		color: var(--text-primary);
	}
	
	.support-section p {
		margin-bottom: 2rem;
		color: var(--text-secondary);
		line-height: 1.6;
	}
	
	.support-hours {
		max-width: 400px;
		margin: 0 auto;
		text-align: left;
	}
	
	.support-hours h4 {
		margin-bottom: 1rem;
		color: var(--text-primary);
		text-align: center;
	}
	
	.support-hours ul {
		list-style: none;
		padding: 0;
	}
	
	.support-hours li {
		padding: 0.5rem 0;
		border-bottom: 1px solid var(--border-light);
		color: var(--text-secondary);
		display: flex;
		justify-content: space-between;
	}
	
	.support-hours li:last-child {
		border-bottom: none;
	}
	
	@media (max-width: 768px) {
		.contact-grid {
			grid-template-columns: 1fr;
		}
		
		.faq-grid {
			grid-template-columns: 1fr;
		}
		
		.support-hours {
			text-align: center;
		}
		
		.support-hours li {
			flex-direction: column;
			text-align: center;
		}
	}
</style>
